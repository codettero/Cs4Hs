<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.testyourgeneralknowledge.MainActivity">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question1"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginBottom="8dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/franta"
                android:text="@string/Question1_Option1"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="20dp"
                android:buttonTint="@color/checkBoxColor"
                android:checked="false"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/polonia"
                android:text="@string/Question1_Option2"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="20dp"
                android:buttonTint="@color/checkBoxColor"
                android:checked="false"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/germania"
                android:text="@string/Question1_Option3"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="20dp"
                android:buttonTint="@color/checkBoxColor"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/anglia"
                android:text="@string/Question1_Option4"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="20dp"
                android:buttonTint="@color/checkBoxColor"
                android:checked="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question2"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginBottom="8dp"
                />
            <RadioGroup
                android:id="@+id/domnii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/threeD"
                    android:text="@string/Question2_Option1"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="20dp"
                    android:buttonTint="@color/checkBoxColor"
                    android:checked="false"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/twoD"
                    android:text="@string/Question2_Option2"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="20dp"
                    android:buttonTint="@color/checkBoxColor"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fiveD"
                    android:text="@string/Question2_Option3"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="20dp"
                    android:buttonTint="@color/checkBoxColor"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fourD"
                    android:text="@string/Question2_Option4"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="20dp"
                    android:buttonTint="@color/checkBoxColor"
                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question3"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/traian"
                android:hint="Write your answer here"
                />

        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Submit"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:onClick="submit">
        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/correctResults"
                android:textAlignment="center"
                android:textColor="#004d40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:text=""
                />

            <TextView
                android:id="@+id/wrongResults"
                android:textAlignment="center"
                android:textColor="#bf360c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:text=""
                />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
